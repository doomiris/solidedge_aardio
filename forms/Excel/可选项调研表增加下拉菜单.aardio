/*设置可行项数据表{{*/
var setdbsheet = function(wb){
	var sht;
	for (i=1; wb.sheets.count) {
		if (wb.sheets(i).name == _od_list_sht) {
				sht = wb.sheets(i);
				break;
		}
	}
	if !sht{
		sht = wb.sheets.add();
		sht.name = _od_list_sht;
	}
	else sht.usedrange.clear();
	return sht; 
}
/*}}*/

