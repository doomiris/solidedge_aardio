/*filterDeleted{{*/
var filterDeleted = function(t){
	var z = {};
	if t.fields z.fields = t.fields;
	for (i=1; #t) {
		if t[i].更改标记
			if string.find(t[i].更改标记,"删") continue;
		table.push(z, t[i])
	}		
	return z;
}
/*}}*/
var searchOption = function(str){
	if !str return null; 
	var t = db.getTable("SELECT * FROM [特性参数规划表]", { 特性 = string.upper(str) });
	return filterDeleted(t);
}


