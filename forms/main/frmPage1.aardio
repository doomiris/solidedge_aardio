var saveLists = function(winform){
	import config;
	import sqlite;
	var dbpath = config.dbServer.path + "tbm.db"
	var dbRs = sqlite(dbpath);	//打开数据库连接

	//replace语句根据主键查询,不存在相同数据则插入新的,否则更新已存在的数据
	var cmd = dbRs.prepare("INSERT INTO SE_TBM_Lists VALUES (@ID,@ListName,@Title);" );
	
	for name, ctrl in winform.eachControl("combobox"){
		var keyword = string.trimleft(name,"cb_");
		if #ctrl.text and !ctrl.find(ctrl.text) {
			cmd.step(  
				Title = ctrl.text;
				ListName = keyword;
			);
			ctrl.add(ctrl.text);
		}
	}
	dbRs.close();
}
