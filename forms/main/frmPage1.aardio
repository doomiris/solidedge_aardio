/*loadLists{{*/
var loadPromptList = function(winform){
	import config;
	import sqlite;
	var dbpath = config.dbServer.path + "tbm.db"
	var dbRs = sqlite(dbpath);	//打开数据库连接
	import tarray;
	var tab = dbRs.getTable("select * from SE_TBM_Lists");
	for(name,ctrl in winform.eachControl() ){
		if ctrl.cls !== "combobox" continue ; 
		var keyword = string.trimleft(name,"cb_");
		ctrl.items = tarray.getCol(
			table.filter(tab, function(v, index){
				return v.ListName == keyword;
			}) , "Title"
		)
	}
	dbRs.close();
}
