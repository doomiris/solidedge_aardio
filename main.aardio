hkId = mainForm.reghotkey(  /*回调函数,控制键,虚拟键码*/
	function(id,mod,vk){
		/* 
		# 检查最上层应用程序, 如果是有焦点状态, 获取当前打开的文件名称
		*/
		var hwnd = win.getForeground();
		if(!hwnd) return;
		
		var tid, pid = win.getThreadProcessId(hwnd);
		if(!pid) return;

/*
		var exeName = string.lower(
				io.splitpath(
					process(pid).getPath()
				).file
			);
*/
		var current_App;
		for object,interface,name,index in com.eachRunning() {
			if object.hwnd == hwnd {
				current_App = object;
				break;	
			}
		}
		if !current_App return ; 

		select(current_App.Name){
			case "Microsoft Excel" {
				if !current_App.Workbooks.Count return ;
				import string.keywords;
				var kw = string.keywords(["专用号申请","BOM更改","BG"]);
				var wb = current_App.ActiveWorkbook;				
				switch( kw.findOne(wb.Name), {  
					[1]: function(){
						thread.invoke( λ () loadcodex("\forms\Excel\check_专用号申请表_GUI.aardio"))
					};
					[2]: function(){
						thread.invoke( λ () loadcodex("\forms\Excel\check_BOM更改单_GUI.aardio"))
					}; 
					[3]: function(){
						thread.invoke( λ () loadcodex("\forms\Excel\check_新BOM申请表_GUI.aardio"))						
					};  
				})

			}
			case "Solid Edge 2020" {
				if current_App.Documents.Count
					if current_App.ActiveDocumentType == 2 /*Draft Document Type*/
						thread.invoke( λ () loadcodex("\forms\main\frmPage1.aardio"))
			}
		}

	},
	4 /*_MOD_SHIFT*/,
	0x70 /*_VK_F1*/
);


