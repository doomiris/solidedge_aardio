		win.quitMessage();
	var hasNewVer = thread.invokeAndWait(
		function(current_version){
			import win;
			import global;
			import fsys.version;
			import config;
			if io.exist(io.joinpath(io._exedir,"update\se_tbm.exe"))
				var new_ver = fsys.version.getInfo("update\se_tbm.exe").productVersion;
