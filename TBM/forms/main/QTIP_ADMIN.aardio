/*加密{{*/
var dbmm = function(dbpath, old_password, new_password){
	import sqlite.aes256;
	var mm = sqlite.aes256(dbpath, old_password)
	mm.rekey(new_password); //用rekey加密的数据库无法用Cipher解密, wxsqlite最新版已经修复这个问题了.
	mm.close();
	win.msgbox("加密成功, 即将退出")
	win.quitMessage()
}
